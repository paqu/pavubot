
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>

    <script>
        var socket = io();

        socket.on('connect', function (data) {
          console.log("Connected to server");
        });

        function left_button_press() {
          console.log("LEFT press");
          socket.emit('left', { msg :'left key pressed'});
        }
        function right_button_press() {
          console.log("RIGHT press");
        }
        function up_button_press() {
          console.log("UP press");
        }
        function down_button_press() {
          console.log("DOWN press");
        }

        function left_button_up() {
          console.log("LEFT up");
        }
        function right_button_up() {
          console.log("RIGHT up");
        }
        function up_button_up() {
          console.log("UP up");
        }
        function down_button_up() {
          console.log("DOWN up");
        }

        $(document).ready(function() {
          $(document).on({
            keypress:function (event) {
              if (event.wich === 87 || event.which === 119) {
                up_button_press();
              }else if (event.wich === 83 || event.which === 115) {
                down_button_press();
              }else if (event.which === 65 || event.which === 97) {
                left_button_press();
              }else if (event.which === 68 || event.which === 100) {
                right_button_press();
              }
            },
            keyup:function (event) {   
              if (event.wich === 87 || event.which === 119) {
                up_button_up();
              }else if (event.wich === 83 || event.which === 115) {
                down_button_up();
              }else if (event.which === 65 || event.which === 97) {
                left_button_up();
              }else if (event.which === 68 || event.which === 100) {
                right_button_up();
              }
            }
          });
        });
    </script>

    <div id="motor">
      <div>
        <label for="motor_a_speed">Predkosc motor_a:</label>
        <input type="text" id="motor_a_speed">
        <button id="btn_motor_a_speed"  type="button">Zmien
        </button>
      </div>
      </br>
      <div>
        <label for="motor_b_speed">Predkosc motor_b:</label>
        <input type="text" id="motor_b_speed">
        <button id="btn_motor_a_speed"  type="button">Zmien
        </button>
      </div>
    </div>

